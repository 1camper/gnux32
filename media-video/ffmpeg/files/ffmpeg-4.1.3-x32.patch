-/* FF_REG_SP is defined in Solaris sys headers, so use FF_REG_sp */
 #    define FF_REG_sp "rsp"
 #    define FF_REG_BP "rbp"
 #    define FF_REGBP   rbp
@@ -47,10 +79,13 @@ typedef int64_t x86_reg;
 #    define FF_REGc    rcx
 #    define FF_REGd    rdx
 #    define FF_REGSP   rsp
+#    define FF_REG8    r8
 
 #elif ARCH_X86_32
 
 #    define FF_OPSIZE "l"
+#    define FF_PTROP "k"
+#    define FF_MAXOP "k"
 #    define FF_REG_a "eax"
 #    define FF_REG_b "ebx"
