 #    define FF_REG_a "rax"
 #    define FF_REG_b "rbx"
 #    define FF_REG_c "rcx"
 #    define FF_REG_d "rdx"
 #    define FF_REG_D "rdi"
 #    define FF_REG_S "rsi"
+#    define FF_REG_8 "r8"
 #    define FF_PTR_SIZE "8"
